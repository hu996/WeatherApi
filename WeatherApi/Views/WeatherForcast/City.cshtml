@model WeatherApi.Models.City
@{
    ViewData["Title"] = "Trying";
}

<section class="events-section section-bg section-padding" id="section_4">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <h2 class="mb-lg-3">Weather in @Model.Name</h2>
            </div>

            <div class="row custom-block mb-3">
                <div class="col-lg-2 col-md-4 col-12 order-2 order-md-0 order-lg-0">
                    <div class="custom-block-date-wrap d-flex d-lg-block d-md-block align-items-center mt-3 mt-lg-0 mt-md-0">
                        <h6 class="custom-block-date mb-lg-1 mb-0 me-3 me-lg-0 me-md-0">@ViewBag.waetherdate</h6>

                       
                    </div>
                </div>

                <div class="col-lg-4 col-md-8 col-12 order-1 order-lg-0">
                    <div class="custom-block-image-wrap">
                        <a href="#">
                            <img src="~/Web/images/professional-golf-player.jpg" class="custom-block-image img-fluid" alt="">

                            <i class="custom-block-icon bi-link"></i>
                        </a>
                    </div>
                </div>

                <div class="col-lg-6 col-12 order-3 order-lg-0">
                    <div class="custom-block-info mt-2 mt-lg-0">
                        <a href="event-detail.html" class="events-title mb-3">Weather Forcast</a>

                        <p class="mb-0">A look at the national current conditions and forecast is found below.</p>

                        <div class="d-flex flex-wrap border-top mt-4 pt-3">

                            <div class="mb-4 mb-lg-0">
                                <div class="d-flex flex-wrap align-items-center mb-1">
                                    <span class="custom-block-span">City Name:</span>
                                    <p class="mb-0">@Model.Name</p>
                                </div>

                                <div class="d-flex flex-wrap align-items-center">
                                    <span class="custom-block-span">Temprature:</span>

                                    <p class="mb-0">@Model.Temprature</p>
                                </div>
                                <div class="d-flex flex-wrap align-items-center mb-1">
                                    <span class="custom-block-span">Humidity:</span>
                                    <p class="mb-0">@Model.Humidity</p>
                                </div>
                                <div class="d-flex flex-wrap align-items-center mb-1">
                                    <span class="custom-block-span">Pressure:</span>
                                    <p class="mb-0">@Model.Presure</p>
                                </div>
                                <div class="d-flex flex-wrap align-items-center mb-1">
                                    <span class="custom-block-span">Wind:</span>
                                    <p class="mb-0">@Model.Wind</p>
                                </div>
                                <div class="d-flex flex-wrap align-items-center mb-1">
                                    <span class="custom-block-span">Weather:</span>
                                    <p class="mb-0">@Model.Weather</p>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</section>


