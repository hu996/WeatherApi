@model WeatherApi.Models.DailyTemp
@{
    ViewData["Title"] = "DailyTemp";
}

<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <h2>Forcast For Selected City</h2>

            <label asp-for="Day"></label>
            <span class="badge alert-primary">@Model.Day</span></br>
            <label asp-for="DailyMax"></label>
            <span class="badge alert-primary">@Model.DailyMax</span></br>
            <label asp-for="DailyMin"></label>
            <span class="badge alert-primary">@Model.DailyMin</span></br>
            <label asp-for="Night"></label>
            <span class="badge alert-primary">@Model.Night</span></br>
            <label asp-for="Morning"></label>
            <span class="badge alert-primary">@Model.Morning</span></br>
            <label asp-for="Evening"></label>
            <span class="badge alert-primary">@Model.Evening</span></br>


            <form method="get">
                <button asp-controller="WeatherForcast" asp-action="SearchByCity" class="btn btn-primary">Go Back</button>
            </form>
        </div>

    </div>
</div>

